if [ "X$1X" == "XX" ] ; then
    NBR=""
else
    NBR="-$1"
fi

if [ -d app ] ; then
    brakeman -A ${NBR} -qz > /dev/null 2>&1
    if [ "X`echo $?`X" == "X0X" ] ; then
        echo "*** No Brakeman Errors ***" `basename $PWD` 
    else
        echo `brakeman -A ${NBR} -qz | grep 'Security Warnings'` `basename $PWD`
        # 2>&1 |tee o_brakeman.txt
    fi
else
    echo "NOT RAILS: `basename $PWD`"
fi
