if [ "X$1X" == "XX" ] ; then
    echo "Usage: $0 gemname good-gem-numbers" ; exit
fi

if [ "X$2X" == "XX" ] ; then
    egrep "$1" $HOME/Projects/*/*lock | grep "[0-9]\." | egrep -v ">|\(="
else
    if [ "X$3X" == "XX" ] ; then
        egrep "$1" $HOME/Projects/*/*lock | grep "[0-9]\." | egrep -v ">|$2|\(="
    else
        egrep "$1" $HOME/Projects/*/Gemfile | grep "[0-9]\." | egrep -v ">|$2|\(="
    fi
fi
